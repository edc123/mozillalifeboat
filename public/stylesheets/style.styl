    color: #fff;
    padding: 7px 10px;
    border-radius: 3px;
    text-decoration: none;
    margin-top: 9px;
    display: inline-block;
    &:hover
      background-color #f66b29

#shore
  position: absolute;
  top 23px
  right 0px
  $speed = 7s
  #shore-brown
    animation shore-brown $speed ease-in-out infinite
    @keyframes shore-brown
      0%
        transform translate(3px, -3px)
      50%
        transform translate(32px, -32px)
      100%
        transform translate(3px, -3px)
  #shore-white
    animation shore-white $speed ease-in-out infinite
    @keyframes shore-white
      0%
        transform translate(0px, -0px)
      60%
        transform translate(25px, -25px)
      70%
        transform translate(25px, -25px)
      100%
        transform translate(0px, -0px)
  #shore-blue
    animation shore-blue $speed ease-in-out infinite
    @keyframes shore-blue
      0%
        transform translateY(0px)
      50%
        transform translate(15px, -15px)
      100%
        transform translateY(0px)

