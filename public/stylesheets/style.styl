@import 'nib';

$speed = 1.4s

*, *:before, *:after
  box-sizing border-box

body
  padding: 50px
  font: 15px 'Fira Sans', sans-serif;
  font-weight 300
  background linear-gradient(-45deg, #257b9e, #5bb1d4)

html, body
  min-height 100%

a
  color: #00B7FF

#parent
  #ls
    width 100px
    height 100px
    position: absolute;
    top: 105px;
    left: 80px;
    display none

  #sea
    width 200px
    height 300px
    transform rotate(-39deg)
    animation boat 8.3s ease-out 0s alternate infinite
    @keyframes boat
      from
        transform rotate(-45deg)
      to
        transform rotate(-30deg)

  #sea-Head
    transform translateY(2px) translateX(-5px) rotate(-22deg)

  // This will cut down on CSS we have to write!
  // Don't bother understainding it, just trust the process...
  boat-root(selector)
    #{selector}
      animation selector $speed ease-in-out alternate infinite
    @keyframes {selector}
      from
        transform translateX(0px)
      to
        {block}
  boat(selector)
    +boat-root(selector)
      from
        transform translateX(0px)
      to
        {block}

  +boat(sea-Shadow)
    transform translateX(-6px)

  +boat(sea-Boat)
    transform translateX(6px)

  +boat(sea-Top-Deck-Shadow)
    transform translateX(-3px)

  +boat(sea-Top-Deck-Inside)
    transform translateX(-3px)

  +boat(sea-Top-Shadow-right)
    transform translateX(-8px)

  +boat(sea-Outside-left)
    transform translateX(-5px)

  +boat(sea-Deck-Shadow-right)
    transform translateX(-8px)

  +boat(sea-Deck-right)
    transform translateX(-10px)

  +boat-root(sea-Body)
    from
      transform translate(13px, 132px)
    to
      transform translate(12px, 132px)

  +boat-root(sea-Head)
    from
      transform translateY(2px) translateX(-5px) rotate(-22deg)
    to
      transform translateY(2px) translateX(0px) rotate(-22deg)


  +boat(sea-RP-Shadow-Body)
    transform translateY(-1px)

  +boat(sea-RP-Shadow-Tail)
    transform translateY(-1px) translateX(-7px)

  +boat-root(sea-Tail)
    from
      transform translate(35.990969px, 5.149352px)
    to
      transform translate(31.990969px, 5.149352px)

#logo-p
  position relative
  height 200px
#logo, #logo-shadow, #logo-drop
  position absolute
  padding-left 37px
  .logo
    display inline-block
    color #fff
    font-family 'Roboto Slab', serif
    font-weight 900
    font-size 70px
    padding 0 2px
    &.l1
      animation m 136s ease-out
      @keyframes m
        0%
          transform translateY(0px)
        5%
          transform translateY(0px)
        100%
          transform: rotate(-25deg) translate(-30px, -50px);
    /*
    padding 0 6px
    &.l1
      transform rotate(2deg)
    &.l2
      transform rotate(1deg)
    &.l3
      transform rotate(-2deg) translateY(3px)
    &.l4
      transform rotate(2deg)
    &.l5
      padding-right 0
      transform rotate(0deg) translateY(-3px)
    &.l6
      padding-left 0
      transform rotate(2deg)
    &.l7
      transform rotate(-2deg)
      */
    &.l5, &.l6
      font-family: 'Open Sans',serif;
      padding: 0;
      letter-spacing: -6px;
      font-weight 800
#parent
  width 580px
  position relative
  margin 80px auto

#sea
  position absolute
  left 350px
  top -90px

#logo-p
  position relative
  #lifeboat
    position absolute
    left 179px
    color #175a75
    font-size 37px
    top 88px
    font-weight 400

#logo
  .logo
    span
      position relative
      display inline-block
    $speed2 = $speed * 2
    &.l1 span
      animation letter $speed2 ease-out -0.4s infinite
    &.l2 span
      animation letter $speed2 ease-out -0.6s infinite
    &.l3 span
      animation letter $speed2 ease-out -1.0s infinite
    &.l4 span
      animation letter $speed2 ease-out -1.4s infinite
    &.l5 span
      animation letter $speed2 ease-out -1.8s infinite
    &.l6 span
      animation letter $speed2 ease-out -2.4s infinite
    &.l7 span
      animation letter $speed2 ease-out -2.8s infinite
#logo-shadow
  transform translate(-5px, 8px)
  .logo
    color #338baf

#logo-drop
  transform translate(-2px, 5px)
  .logo
    color #dccec8

@keyframes letter
  0%
    transform translateY(2px)
  50%
    transform translateY(0px)
  100%
    transform translateY(2px)

#companies {
  max-width: 1761px;
  margin: auto;
	display: grid;
	grid-template-columns: repeat(4, 1fr);
	grid-auto-rows: 1fr;
  grid-column-gap: 30px;
  grid-row-gap: 30px;
}

@media(max-width: 1500px) {
  #companies {
    max-width: 100%;
    grid-template-columns: repeat(3, 1fr);
  }
}

@media(max-width: 1200px) {
  #companies {
    max-width: 100%;
    grid-template-columns: repeat(2, 1fr);
  }
}
@media(max-width: 800px) {
  #shore {
    display none
  }
}
@media(max-width: 800px) {
  #companies {
    max-width: 100%;
    grid-template-columns: repeat(1, 1fr);
  }
}

@media(max-width: 600px) {
  body {
    padding: 20px;
  }
  #sea {
    top: -80px;
    left: 0;
  }
  #shore {
    display none
  }
  #parent {
    height: 280px;
    width: auto;
    margin-top: 50px;
    height: 370px;
  }
  #sea-parent {
    margin-left: -55px;
  }
  #logo-p #lifeboat {
    left: auto;
    width: 100%;
    text-align: center;
    left: 0;
  }
  #logo-p {
    display: block;
    width: auto;
    margin: auto;
  }
  #logo, #logo-shadow, #logo-drop {
    padding-left: 0;
    width: 100%;
    text-align: center;
  }
  #sea {
    margin: auto;
    position: relative;
    display: block;
  }
  #companies {
    display: block;
  }
  .company, .add-company {
    margin: 0 0 30px 0;
  }
}

