extends layout

block content
  #shore
    != svg('public/images/shore.svg', 'shore')

  #parent
    #logo-p
      #lifeboat Lifeboat
      != svg('public/images/ls.svg', 'ls')
      #logo-shadow
        .logo.l1 #[span m]
        .logo.l2 #[span o]
        .logo.l3 #[span z]
        .logo.l4 #[span :]
        .logo.l5 #[span /]
        .logo.l6 #[span /]
        .logo.l7 #[span a]
      #logo-drop
        .logo.l1 #[span m]
        .logo.l2 #[span o]
        .logo.l3 #[span z]
        .logo.l4 #[span :]
        .logo.l5 #[span /]
        .logo.l6 #[span /]
        .logo.l7 #[span a]
      #logo
        .logo.l1 #[span m]
        .logo.l2 #[span o]
        .logo.l3 #[span z]
        .logo.l4 #[span :]
        .logo.l5 #[span /]
        .logo.l6 #[span /]
        .logo.l7 #[span a]
    != svg('public/images/boat.svg', 'sea')

  #companies
    for c in data
      if c["Company Name"]
        .company
          .c-logo
            if getImage(c)
              img(src=getImage(c))
            else
              != c['Company Name']
          h3 What #{c['Company Name']} does
          p.desc!= c['Company Description']
          h3 How #{c['Company Name']} is like Mozilla
          p.desc!= c["Why It's Like Mozilla"]
          p.contact Alumni contact is #[strong= c['Mozilla Alumni Name']]
          .careers-pad
            .careers-parent
              a.careers(href=c['Careers Page URL']) View Open Jobs

    .add-company
      h2 Add Your Company
      p Are you a Mozilla alumni looking to hire someone recently laid off?
      a(href="") Add your company
